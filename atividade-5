#include <stdio.h>
#include <locale.h>

int main () {
	
	setlocale(LC_ALL,"Portuguese");
	
	int num1, num2, num3;
	float media;
	
	printf("Escreva um número");
	scanf("%i", &num1);
	printf("Escreva o segundo número");
	scanf("%i", &num2);
	printf("Escreva o terceiro número");
	scanf("%i", &num3);
	
	media = (num1+num2+num3)/3;
	
	printf("A média dos três múmeros escolhidos é %f", media);
	
}
